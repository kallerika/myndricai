<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatItemRoot"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAvatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="23dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#6C63FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:alpha="0.95"
            android:src="@android:drawable/ic_dialog_email"
            app:tint="@android:color/white" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="Мама"
        app:layout_constraintStart_toEndOf="@+id/cardAvatar"
        app:layout_constraintTop_toTopOf="@+id/cardAvatar"
        app:layout_constraintEnd_toStartOf="@+id/tvTime" />

    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#B0BEC5"
        android:textSize="13sp"
        tools:text="Перезвони мне!"
        app:layout_constraintStart_toEndOf="@+id/cardAvatar"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintEnd_toStartOf="@+id/viewDot" />

    <!-- Time -->
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6FFFE9"
        android:textSize="12sp"
        tools:text="11:20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvName" />

    <!-- Small dot (можно скрыть, если не нужно) -->
    <View
        android:id="@+id/viewDot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="10dp"
        android:background="@android:drawable/presence_online"
        android:alpha="0.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tvLastMessage"
        tools:ignore="MissingConstraints" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#12FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messagesRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:paddingTop="14dp">

    <!-- Top bar -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@android:color/transparent"
        android:contentDescription="Назад"
        android:padding="10dp"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Сообщения"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack" />

    <TextView
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:gravity="center"
        android:text="Изм."
        android:textColor="#6FFFE9"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnBack"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        tools:ignore="HardcodedText" />

    <!-- Search -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSearch"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1FFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dark"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:alpha="0.75"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#B0BEC5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:hint="Поиск"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#88B0BEC5"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/ivSearch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Static chats list -->
    <ScrollView
        android:id="@+id/svChats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cardSearch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llChatsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 1) Шеф (Кофейня) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar1"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#2D9CDB"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:alpha="0.95"
                        app:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Шеф • LuckyCoffee"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar1"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar1"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime1" />

                <TextView
                    android:id="@+id/tvLast1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Не опаздывай в среду, в 9:00 открытие."
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar1"
                    app:layout_constraintTop_toBottomOf="@+id/tvName1"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:14"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 2) Антон (поезд) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#27AE60"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:alpha="0.95"
                        app:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Антон"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar2"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar2"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime2" />

                <TextView
                    android:id="@+id/tvLast2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Я подъезжаю. Ты будешь на платформе в 11:45?"
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar2"
                    app:layout_constraintTop_toBottomOf="@+id/tvName2"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName2" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 3) Мама -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar3"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#6C63FF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:alpha="0.95"
                        app:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Мама"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar3"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar3"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime3" />

                <TextView
                    android:id="@+id/tvLast3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Даша, ты где? Перезвони мне."
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar3"
                    app:layout_constraintTop_toBottomOf="@+id/tvName3"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:18"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 4) Катя (смена) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar4"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F2994A"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:alpha="0.95"
                        app:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Катя"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar4"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar4"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime4" />

                <TextView
                    android:id="@+id/tvLast4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Я могу поменяться с тобой сменами завтра, а ты выйди за меня, пожалуйста, в среду."
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar4"
                    app:layout_constraintTop_toBottomOf="@+id/tvName4"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вчера"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName4" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 5) Универ • Группа -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar5"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#9B51E0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:alpha="0.95"
                        app:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Универ • Группа"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar5"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar5"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime5" />

                <TextView
                    android:id="@+id/tvLast5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Кто скинется на распечатку? Нужно до пары."
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar5"
                    app:layout_constraintTop_toBottomOf="@+id/tvName5"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вчера"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName5" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 6) Английский • Марина -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar6"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#56CCF2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.95"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Английский • Марина"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar6"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar6"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime6" />

                <TextView
                    android:id="@+id/tvLast6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Не забудь дз: 10 предложений в Present Perfect."
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar6"
                    app:layout_constraintTop_toBottomOf="@+id/tvName6"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пн"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName6" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 7) Лера -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar7"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EB5757"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:alpha="0.95"
                        app:tint="@android:color/white"/>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Лера"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar7"
                    app:layout_constraintTop_toTopOf="@+id/cardAvatar7"
                    app:layout_constraintEnd_toStartOf="@+id/tvTime7" />

                <TextView
                    android:id="@+id/tvLast7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Кофейня после пары? Я рядом буду."
                    android:textColor="#B0BEC5"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/cardAvatar7"
                    app:layout_constraintTop_toBottomOf="@+id/tvName7"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvTime7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вс"
                    android:textColor="#6FFFE9"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvName7" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#12FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 8) Макс -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAvatar8"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#219653"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="match_parent"

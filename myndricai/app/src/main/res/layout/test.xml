<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/desktopRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:paddingTop="16dp"
    android:paddingBottom="18dp"
    android:paddingStart="18dp"
    android:paddingEnd="18dp">

    <!-- Время в левом верхнем углу (позже подставите из Java) -->
    <TextView
        android:id="@+id/tvTopTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#E6FFFFFF"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="18:30"/>

    <!-- Верхний "виджет" -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopWidget"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1FFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/tvTopTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dark"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvWidgetDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сегодня"
                android:textColor="#B0BEC5"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/tvWidgetText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Встреча в 15:00"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWidgetDay"
                app:layout_constraintEnd_toStartOf="@+id/btnExitPhone"
                tools:ignore="HardcodedText"/>

            <!-- Кнопка "Выход из телефона" -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExitPhone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Выйти"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                app:strokeWidth="1dp"
                app:strokeColor="#2FFFFFFF"
                app:backgroundTint="#1AFFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Сетка приложений (2 ряда по 4) -->
    <LinearLayout
        android:id="@+id/appsGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/cardTopWidget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- App 1 -->
            <LinearLayout
                android:id="@+id/appEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_mail"
                    android:contentDescription="Почта"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Почта"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <!-- App 2 -->
            <LinearLayout
                android:id="@+id/appCalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_calendar"
                    android:contentDescription="Календарь"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Календарь"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <!-- App 3 -->
            <LinearLayout
                android:id="@+id/appNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivNotes"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_notes"
                    android:contentDescription="Заметки"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Заметки"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <!-- App 4 -->
            <LinearLayout
                android:id="@+id/appSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_settings"
                    android:contentDescription="Настройки"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Настройки"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

        </LinearLayout>

        <!-- spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"/>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/appPhonebook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivPhonebook"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_phone"
                    android:contentDescription="Телефон"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Телефон"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appMessages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivMessages"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_messages"
                    android:contentDescription="Сообщения"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Сообщения"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appGallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivGallery"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_gallery"
                    android:contentDescription="Галерея"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Галерея"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appCamera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivCamera"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_app_camera"
                    android:contentDescription="Камера"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Камера"
                    android:textColor="#E6FFFFFF"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Нижний док -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDock"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1FFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_dark"
            android:paddingStart="26dp"
            android:paddingEnd="26dp">

            <ImageButton
                android:id="@+id/btnDockPhone"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_app_phone"
                android:contentDescription="Телефон"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/btnDockMessages"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_app_messages"
                android:contentDescription="Сообщения"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@+id/btnDockPhone"
                app:layout_constraintEnd_toStartOf="@+id/btnDockGallery"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/btnDockGallery"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_app_gallery"
                android:contentDescription="Галерея"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
